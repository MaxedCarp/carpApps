local function Continue()
    local event, key = nil, nil
    term.setTextColor(colors.yellow)
    write("Press any key to continue!")
    while key == nil do
        event, key = os.pullEvent("key")
    end
    local x, y = term.getCursorPos()
    term.clearLine()
    term.scroll(3)
    term.setCursorPos(1, y-3)
    term.setTextColor(colors.lime)
end
term.setTextColor(colors.lightGray)
write("*All commands have to be entered in lua mode!\n")
term.setTextColor(colors.lime)
write("- carpApps.OnlineStatus(): Prints the server status!\n")
write("- carpApps.Send(): Sends messages to a single, specified ID.\n")
write("- carpApps.SendMulti(ID1, ID2, ID3....ID10): Sends messages to up to 10 specified ID's (leave fields empty if you want less ID\'s).\n")
write("- carpApps.Broadcast(): Sends a message to all computers in range with a protocol of \"BROADCAST\".\n")
write("- carpApps.SetPassword(): Set a password in the form of a question.\n")
write("- carpApps.SetName(name): Sets the name.\n")
write("- carpApps.UserList(): Shows the list of registered monitors.\n")
term.setTextColor(colors.yellow)
Continue()
write("- carpApps.ExpMode(mode): Changes the status of Experimental Features. (\"mode\" must be \"true\", \"false\" or empty)\n")
Continue()
write("- carpApps.HighScore(): Displays the user that has the highest score in the database.\n")
Continue()
write("- worm (This command is not a lua command): the standard worm game but it adds points to your database profile!\n")
Continue()
write("- carpApps.SetTime(): Starts the script for setting the computer's time\n")
Continue()
term.setTextColor(colors.white)
